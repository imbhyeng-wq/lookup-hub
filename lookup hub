<script>
function showTab(tab){
  document.querySelectorAll('.tab-content').forEach(c=>c.style.display='none');
  document.getElementById(tab).style.display='block';
  document.querySelectorAll('.tab-button').forEach(b=>b.classList.remove('active'));
  document.querySelector(`.tab-button[onclick="showTab('${tab}')"]`).classList.add('active');
}
function typeText(element, text, speed=30){
  element.innerHTML='';
  element.style.opacity=1;
  let i=0;
  const interval=setInterval(()=>{
    element.innerHTML+=text[i];
    i++;
    if(i>=text.length) clearInterval(interval);
  }, speed);
}
function lookupIP(){
  const ip=document.getElementById('ip-input').value.trim()||'';
  const url= ip ? `https://ipinfo.io/${ip}/json` : 'https://ipinfo.io/json';
  const resultDiv=document.getElementById('ip-result');
  resultDiv.innerHTML='Searching...';
  resultDiv.style.opacity=1;
  fetch(url).then(r=>r.json()).then(data=>{
    if(data.error || !data.ip) throw new Error(data.error || 'Invalid IP');
    const text=`IP: ${data.ip || 'N/A'}
City: ${data.city || 'N/A'}
Region: ${data.region || 'N/A'}
Country: ${data.country || 'N/A'}
Location: ${data.loc || 'N/A'}
Postal: ${data.postal || 'N/A'}
Timezone: ${data.timezone || 'N/A'}
ASN/Org: ${data.org || 'N/A'}`;
    typeText(resultDiv,text,30);
  }).catch(e=>{ typeText(resultDiv,`Error: ${e.message}`,30); });
}
function lookupDNS(){
  const domain=document.getElementById('dns-input').value.trim();
  const resultDiv=document.getElementById('dns-result');
  if(!domain){ typeText(resultDiv,'Please enter a domain!',30); return; }
  resultDiv.innerHTML='Fetching DNS records...';
  fetch(`https://dns.google/resolve?name=${domain}`).then(r=>r.json()).then(data=>{
    if(data.Status!==0){ typeText(resultDiv,'No DNS records found.',30); return; }
    let text='DNS Records:\n';
    if(data.Answer){ data.Answer.forEach(a=>{ text+=`${a.name} ${a.type} ${a.data}\n`; }); }
    else{ text+='No Answer records.'; }
    typeText(resultDiv,text,20);
  }).catch(e=>{ typeText(resultDiv,'Error fetching DNS records: '+e.message,20); });
}
function validateEmail(){
  const email=document.getElementById('email-input').value.trim();
  const resultDiv=document.getElementById('email-result');
  if(!email){ typeText(resultDiv,'Please enter an email!',30); return; }
  const regex=/^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if(!regex.test(email)){ typeText(resultDiv,'Invalid email format!',30); return; }
  const domain=email.split('@')[1];
  resultDiv.innerHTML='Checking MX records...';
  fetch(`https://dns.google/resolve?name=${domain}&type=MX`).then(r=>r.json()).then(data=>{
    let text=`Email: ${email}\nFormat: Valid\n`;
    if(data.Answer && data.Answer.length>0){ text+='MX Records found:\n'; data.Answer.forEach(a=>{ text+=`- ${a.data}\n`; }); }
    else{ text+='No MX records found for domain.'; }
    typeText(resultDiv,text,20);
  }).catch(e=>{ typeText(resultDiv,'Error validating email: '+e.message,20); });
}
function lookupDiscord(){
  const token=document.getElementById('discord-token').value.trim();
  const id=document.getElementById('discord-input').value.trim();
  const resultDiv=document.getElementById('discord-result');
  if(!token || !id){ typeText(resultDiv,'Please enter both token and Discord ID!',30); return; }
  resultDiv.innerHTML='Fetching Discord info...';
  fetch(`https://discord.com/api/v9/users/${id}`, { method:'GET', headers:{'Authorization': token} })
  .then(r=>r.json())
  .then(data=>{
    if(data.username){
      let text = `Username: ${data.username}#${data.discriminator}\n`;
      text += `ID: ${data.id}\n`;
      text += `Avatar: https://cdn.discordapp.com/avatars/${data.id}/${data.avatar}.png\n`;
      if(data.global_name) text += `Display Name: ${data.global_name}\n`;
      typeText(resultDiv,text,20);
    } else { typeText(resultDiv,'User not found or token invalid.',20); }
  }).catch(e=>typeText(resultDiv,'Error: '+e.message,20));
}
</script>

